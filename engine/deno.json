{
  "compilerOptions": {
    "strict": true,
    "noUncheckedIndexedAccess": true
  },
  "imports": {
    "pipedreamer": "./mod.ts",
    "std/": "https://deno.land/std@0.224.0/",
    "std/yaml": "https://deno.land/std@0.224.0/yaml/mod.ts",
    "std/path": "https://deno.land/std@0.224.0/path/mod.ts",
    "std/flags": "https://deno.land/std@0.224.0/flags/mod.ts",
    "std/assert": "https://deno.land/std@0.224.0/assert/mod.ts"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": false
  },
  "tasks": {
    "check": "deno check main.ts",
    "test": "deno test --allow-read --allow-net --allow-write=/tmp",
    "fmt": "deno fmt",
    "lint": "deno lint"
  }
}
